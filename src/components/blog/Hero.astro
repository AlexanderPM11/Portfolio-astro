---
interface Props {
  initialData: any;
  categories: any[];
}

const { initialData, categories } = Astro.props;
---

<section
  class="relative min-h-screen bg-linear-to-br from-gray-900 via-gray-800 to-gray-900 flex items-center justify-center overflow-hidden"
>
  <!-- Fondo con efectos más dinámicos -->
  <div class="absolute inset-0">
    <!-- Imagen de fondo principal -->
    <img
      src="https://images.unsplash.com/photo-1555066931-4365d14bab8c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80"
      alt="Background"
      class="w-full h-full object-cover"
    />

    <!-- Overlay gradiente para mejor legibilidad -->
    <div
      class="absolute inset-0 bg-linear-to-br from-gray-900/90 via-gray-900/80 to-gray-900/95"
    >
    </div>

    <!-- Overlay con patrón sutil -->
    <div
      class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,var(--tw-gradient-stops))] from-orange-500/5 via-transparent to-transparent"
    >
    </div>
  </div>
  <div class="absolute inset-0 overflow-hidden">
    <div
      class="absolute -top-40 -left-40 w-80 h-80 bg-orange-500/20 rounded-full blur-3xl animate-pulse"
    >
    </div>
    <div
      class="absolute -bottom-40 -right-40 w-80 h-80 bg-purple-500/10 rounded-full blur-3xl animate-pulse delay-1000"
    >
    </div>
    <div
      class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-blue-500/5 rounded-full blur-3xl animate-pulse delay-500"
    >
    </div>

    <!-- Patrón de puntos decorativos -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-1/4 left-1/4 w-2 h-2 bg-white rounded-full">
      </div>
      <div
        class="absolute top-1/3 right-1/3 w-1 h-1 bg-orange-400 rounded-full"
      >
      </div>
      <div
        class="absolute bottom-1/4 left-1/3 w-1.5 h-1.5 bg-white rounded-full"
      >
      </div>
      <div
        class="absolute top-2/3 right-1/4 w-1 h-1 bg-orange-400 rounded-full"
      >
      </div>
    </div>
  </div>

  <!-- Efecto de partículas -->
  <div class="absolute inset-0 opacity-30">
    <div
      class="particle absolute top-10 left-10 w-1 h-1 bg-orange-400 rounded-full animate-float"
    >
    </div>
    <div
      class="particle absolute top-20 right-20 w-1 h-1 bg-white rounded-full animate-float delay-700"
    >
    </div>
    <div
      class="particle absolute bottom-20 left-20 w-1 h-1 bg-orange-300 rounded-full animate-float delay-300"
    >
    </div>
    <div
      class="particle absolute bottom-10 right-10 w-1 h-1 bg-white rounded-full animate-float delay-1000"
    >
    </div>
  </div>

  <!-- Capa de overlay -->
  <div
    class="absolute inset-0 bg-linear-to-r from-gray-900/80 via-gray-900/70 to-gray-900/80"
  >
  </div>

  <!-- Contenido principal -->
  <div class="relative z-10 max-w-6xl mx-auto px-4 text-center">
    <!-- Badge destacado -->
    <div
      class="inline-flex items-center gap-2 px-4 py-2 mb-8 rounded-full bg-gray-800/60 backdrop-blur-sm border border-gray-700/50"
    >
      <span class="w-2 h-2 bg-orange-400 rounded-full animate-ping"></span>
      <span class="text-sm text-gray-300 font-medium"
        >Explora el conocimiento</span
      >
    </div>

    <!-- Título -->
    <div class="mb-8">
      <h1
        class="text-5xl md:text-7xl lg:text-8xl font-black mb-6 tracking-tight"
      >
        <span
          class="bg-linear-to-r from-white via-gray-200 to-gray-400 bg-clip-text text-transparent"
        >
          Mi Blog
        </span>
        <span
          class="block text-transparent bg-linear-to-r from-orange-400 via-orange-500 to-orange-600 bg-clip-text"
        >
          Tecnológico
        </span>
      </h1>

      <div
        class="w-24 h-1 bg-linear-to-r from-orange-500 to-purple-500 mx-auto rounded-full mb-8"
      >
      </div>
    </div>

    <!-- Descripción -->
    <p
      class="text-xl md:text-2xl text-gray-300 mb-12 max-w-3xl mx-auto leading-relaxed font-light"
    >
      Sumérgete en artículos,
      <span class="text-orange-400 font-medium">tutoriales prácticos</span> y reflexiones
      sobre
      <span class="text-white font-medium">desarrollo web</span>, tecnologías
      emergentes y
      <span class="text-white font-medium">mejores prácticas</span> en programación.
    </p>

    <!-- Estadísticas -->
    <div class="flex flex-wrap justify-center gap-8 mb-12">
      <div
        class="group text-center transform transition-all duration-300 hover:scale-110"
      >
        <div class="relative">
          <div class="text-3xl md:text-4xl font-bold text-orange-400 mb-2">
            {initialData.totalPages}
          </div>
          <div
            class="absolute -inset-1 bg-orange-500/20 rounded-full blur opacity-0 group-hover:opacity-100 transition-opacity duration-300"
          >
          </div>
        </div>
        <div class="text-gray-400 text-sm font-medium">Artículos totales</div>
      </div>

      <div
        class="group text-center transform transition-all duration-300 hover:scale-110"
      >
        <div class="relative">
          <div class="text-3xl md:text-4xl font-bold text-orange-400 mb-2">
            {categories.length}
          </div>
          <div
            class="absolute -inset-1 bg-orange-500/20 rounded-full blur opacity-0 group-hover:opacity-100 transition-opacity duration-300"
          >
          </div>
        </div>
        <div class="text-gray-400 text-sm font-medium">Categorías</div>
      </div>

      <div
        class="group text-center transform transition-all duration-300 hover:scale-110"
      >
        <div class="relative">
          <div class="text-3xl md:text-4xl font-bold text-orange-400 mb-2">
            {new Date().getFullYear() - 2020}+
          </div>
          <div
            class="absolute -inset-1 bg-orange-500/20 rounded-full blur opacity-0 group-hover:opacity-100 transition-opacity duration-300"
          >
          </div>
        </div>
        <div class="text-gray-400 text-sm font-medium">Años de experiencia</div>
      </div>
    </div>

    <!-- Botón CTA -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <button
        class="scrollToPosts cursor-pointer group relative px-8 py-4 bg-orange-500 hover:bg-orange-600 rounded-xl text-white font-semibold transition-all duration-300 transform hover:scale-105 hover:shadow-2xl hover:shadow-orange-500/25 overflow-hidden"
      >
        <span class="relative z-10 flex items-center gap-2">
          Explorar Artículos
          <svg
            class="w-5 h-5 group-hover:translate-x-1 transition-transform"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M19 9l-7 7-7-7"></path>
          </svg>
        </span>
        <div
          class="absolute inset-0 bg-linear-to-r from-transparent via-white/10 to-transparent transform -skew-x-12 -translate-x-full group-hover:translate-x-full transition-transform duration-700"
        >
        </div>
      </button>
    </div>
  </div>

  <!-- Indicador de scroll -->
  <div
    class="scrollToPosts cursor-pointer absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce"
  >
    <div
      class="w-6 h-10 border-2 border-gray-400 rounded-full flex justify-center"
    >
      <div class="w-1 h-3 bg-gray-400 rounded-full mt-2"></div>
    </div>
  </div>
</section>

<!-- Script para scroll suave -->
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const btn = document.querySelectorAll(".scrollToPosts");
    if (btn) {
      btn.forEach((button) => {
        button.addEventListener("click", () => {
          const el = document.getElementById("posts-container");
          if (el) el.scrollIntoView({ behavior: "smooth" });
        });
      });
    }
  });
</script>
