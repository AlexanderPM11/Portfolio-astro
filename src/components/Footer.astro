---
import { Send, Mail, MapPin, Phone, ExternalLink, Heart } from "lucide-astro";
import SocialMedia from "./SocialMedia.astro";
import logo from "../assets/img/Logo.png";
---

<footer
  id="footer"
  class="bg-linear-to-b from-gray-900 to-black text-gray-300 pt-20 pb-8 relative overflow-hidden"
>
  <!-- Elementos decorativos de fondo -->
  <div
    class="absolute top-0 left-0 w-96 h-96 bg-orange-500/5 rounded-full blur-3xl -translate-x-1/2 -translate-y-1/2"
  >
  </div>
  <div
    class="absolute bottom-0 right-0 w-96 h-96 bg-blue-500/5 rounded-full blur-3xl translate-x-1/2 translate-y-1/2"
  >
  </div>

  <div class="max-w-7xl mx-auto px-6 relative z-10">
    <!-- Contenido principal -->
    <div
      class="grid grid-cols-1 lg:grid-cols-4 gap-12 pb-16 border-b border-white/10"
    >
      <!-- Columna 1 - Brand -->
      <div class="lg:col-span-1">
        <div class="flex items-center gap-3 mb-6">
          <img
            src={logo.src}
            class="h-12 w-12 rounded-xl"
            alt="Alexander Polanco Logo"
          />
          <div>
            <span class="text-white font-bold text-xl block">Alexander</span>
            <span class="text-orange-400 font-semibold text-lg block"
              >Polanco</span
            >
          </div>
        </div>
        <p class="text-gray-400 leading-relaxed mb-6 text-lg">
          Desarrollador Full Stack apasionado por crear soluciones digitales
          innovadoras que transforman ideas en realidad.
        </p>
        <div class="space-y-3">
          <div class="flex items-center gap-3 text-gray-400">
            <Mail class="w-5 h-5 text-orange-400" />
            <span class="text-sm">alexanderdev@apolanco.com</span>
          </div>
          <div class="flex items-center gap-3 text-gray-400">
            <MapPin class="w-5 h-5 text-orange-400" />
            <span class="text-sm">Santo Domingo, República Dominicana</span>
          </div>
        </div>
      </div>

      <!-- Columna 2 - Enlaces rápidos -->
      <div>
        <h3 class="text-white text-xl font-bold mb-6 relative inline-block">
          Navegación
          <span
            class="absolute bottom-0 left-0 w-12 h-0.5 bg-linear-to-r from-orange-500 to-orange-600 rounded-full"
          ></span>
        </h3>
        <ul class="space-y-3">
          <li>
            <a
              href="#hero"
              class="group flex items-center gap-2 text-gray-400 hover:text-white transition-all duration-300 hover:translate-x-2"
            >
              <div
                class="w-1.5 h-1.5 bg-orange-500 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"
              >
              </div>
              <span>Inicio</span>
            </a>
          </li>
          <li>
            <a
              href="#services"
              class="group flex items-center gap-2 text-gray-400 hover:text-white transition-all duration-300 hover:translate-x-2"
            >
              <div
                class="w-1.5 h-1.5 bg-orange-500 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"
              >
              </div>
              <span>Servicios</span>
            </a>
          </li>
          <li>
            <a
              href="#projects"
              class="group flex items-center gap-2 text-gray-400 hover:text-white transition-all duration-300 hover:translate-x-2"
            >
              <div
                class="w-1.5 h-1.5 bg-orange-500 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"
              >
              </div>
              <span>Proyectos</span>
            </a>
          </li>
          <li>
            <a
              href="#about"
              class="group flex items-center gap-2 text-gray-400 hover:text-white transition-all duration-300 hover:translate-x-2"
            >
              <div
                class="w-1.5 h-1.5 bg-orange-500 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"
              >
              </div>
              <span>Sobre Mí</span>
            </a>
          </li>
          <li>
            <a
              href="#contact"
              class="group flex items-center gap-2 text-gray-400 hover:text-white transition-all duration-300 hover:translate-x-2"
            >
              <div
                class="w-1.5 h-1.5 bg-orange-500 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"
              >
              </div>
              <span>Contacto</span>
            </a>
          </li>
        </ul>
      </div>

      <!-- Columna 3 - Servicios -->
      <div>
        <h3 class="text-white text-xl font-bold mb-6 relative inline-block">
          Servicios
          <span
            class="absolute bottom-0 left-0 w-12 h-0.5 bg-linear-to-r from-blue-500 to-blue-600 rounded-full"
          ></span>
        </h3>
        <ul class="space-y-3">
          <li>
            <a
              href="#services"
              class="group flex items-center gap-2 text-gray-400 hover:text-white transition-all duration-300"
            >
              <ExternalLink
                class="w-4 h-4 text-blue-400 opacity-0 group-hover:opacity-100 transition-opacity duration-300"
              />
              <span>Desarrollo Web</span>
            </a>
          </li>
          <li>
            <a
              href="#services"
              class="group flex items-center gap-2 text-gray-400 hover:text-white transition-all duration-300"
            >
              <ExternalLink
                class="w-4 h-4 text-blue-400 opacity-0 group-hover:opacity-100 transition-opacity duration-300"
              />
              <span>Apps Móviles</span>
            </a>
          </li>
          <li>
            <a
              href="#services"
              class="group flex items-center gap-2 text-gray-400 hover:text-white transition-all duration-300"
            >
              <ExternalLink
                class="w-4 h-4 text-blue-400 opacity-0 group-hover:opacity-100 transition-opacity duration-300"
              />
              <span>APIs & Backend</span>
            </a>
          </li>
          <li>
            <a
              href="#services"
              class="group flex items-center gap-2 text-gray-400 hover:text-white transition-all duration-300"
            >
              <ExternalLink
                class="w-4 h-4 text-blue-400 opacity-0 group-hover:opacity-100 transition-opacity duration-300"
              />
              <span>Consultoría Tech</span>
            </a>
          </li>
          <li>
            <a
              href="#services"
              class="group flex items-center gap-2 text-gray-400 hover:text-white transition-all duration-300"
            >
              <ExternalLink
                class="w-4 h-4 text-blue-400 opacity-0 group-hover:opacity-100 transition-opacity duration-300"
              />
              <span>Mentoría</span>
            </a>
          </li>
        </ul>
      </div>

      <!-- Columna 4 - Newsletter -->
      <div>
        <h3 class="text-white text-xl font-bold mb-6 relative inline-block">
          Mantente Actualizado
          <span
            class="absolute bottom-0 left-0 w-12 h-0.5 bg-linear-to-r from-green-500 to-green-600 rounded-full"
          ></span>
        </h3>
        <p class="text-gray-400 mb-6 leading-relaxed">
          Suscríbete para recibir actualizaciones sobre nuevos proyectos,
          tutoriales y recursos exclusivos.
        </p>
        <form class="space-y-4">
          <div class="relative">
            <Mail
              class="absolute left-4 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400"
            />
            <input
              type="email"
              placeholder="tu@email.com"
              class="w-full bg-white/5 border border-white/10 rounded-2xl pl-12 pr-4 py-4 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all duration-300 backdrop-blur-sm"
              required
            />
          </div>
          <button
            type="submit"
            class="group w-full bg-linear-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 text-white font-semibold py-4 rounded-2xl transition-all duration-300 hover:scale-105 hover:shadow-2xl hover:shadow-green-500/25 inline-flex items-center justify-center gap-3"
          >
            <span>Suscribirse</span>
            <Send
              class="w-5 h-5 group-hover:translate-x-1 transition-transform duration-300"
            />
          </button>
        </form>
        <div class="mt-6">
          <SocialMedia />
        </div>
      </div>
    </div>

    <!-- Footer inferior -->
    <div
      class="flex flex-col lg:flex-row justify-between items-center pt-8 gap-6"
    >
      <!-- Copyright -->
      <div class="flex items-center gap-2 text-gray-400 text-sm">
        <span>© {new Date().getFullYear()} Alexander Polanco.</span>
        <span class="flex items-center gap-1">
          Hecho con <Heart class="w-4 h-4 text-red-400 fill-current" /> y código
        </span>
      </div>

      <!-- Enlaces legales -->
      <div class="flex items-center gap-6 text-sm">
        <a
          href="#"
          class="text-gray-400 hover:text-white transition-colors duration-300 hover:underline"
        >
          Política de Privacidad
        </a>
        <a
          href="#"
          class="text-gray-400 hover:text-white transition-colors duration-300 hover:underline"
        >
          Términos de Servicio
        </a>
        <a
          href="#contact"
          class="text-orange-400 hover:text-orange-300 transition-colors duration-300 font-medium"
        >
          ¿Necesitas ayuda?
        </a>
      </div>
    </div>

    <!-- Badge de disponibilidad -->
    <div class="text-center mt-8 pt-6 border-t border-white/5">
      <div
        class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-green-500/10 border border-green-500/20 text-green-400 text-sm"
      >
        <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
        <span>Disponible para nuevos proyectos</span>
      </div>
    </div>
  </div>
</footer>

<style>
  /* Animaciones suaves para los enlaces */
  @keyframes fadeInUp {
    from {
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Aplicar animación a las columnas */
  .grid > div {
    animation: fadeInUp 0.6s ease-out;
  }

  .grid > div:nth-child(1) {
    animation-delay: 0.1s;
  }
  .grid > div:nth-child(2) {
    animation-delay: 0.2s;
  }
  .grid > div:nth-child(3) {
    animation-delay: 0.3s;
  }
  .grid > div:nth-child(4) {
    animation-delay: 0.4s;
  }

  /* Mejoras de focus para accesibilidad */
  a:focus-visible,
  button:focus-visible {
    outline: 2px solid #f97316;
    outline-offset: 2px;
    border-radius: 8px;
  }

  /* Efecto de brillo sutil en hover */
  .hover-glow:hover {
    box-shadow: 0 0 20px rgba(249, 115, 22, 0.3);
  }
</style>

<script>
  // Scroll suave para enlaces internos
  document.addEventListener("DOMContentLoaded", () => {
    const footerLinks = document.querySelectorAll('footer a[href^="#"]');

    footerLinks.forEach((link) => {
      link.addEventListener("click", (e) => {
        const href = link.getAttribute("href")!;

        // Solo aplicar scroll suave para enlaces internos en la misma página
        if (href !== "#" && window.location.pathname === "/") {
          e.preventDefault();
          const target = document.querySelector(href);
          if (target) {
            const headerHeight = 80;
            const targetPosition =
              target.getBoundingClientRect().top + window.pageYOffset;
            const offsetPosition = targetPosition - headerHeight;

            window.scrollTo({
              top: offsetPosition,
              behavior: "smooth",
            });
          }
        }
      });
    });

    // Manejo básico del formulario de newsletter
    const newsletterForm = document.querySelector("footer form");
    if (newsletterForm) {
      newsletterForm.addEventListener("submit", (e) => {
        e.preventDefault();
        const emailInput = newsletterForm.querySelector('input[type="email"]')!;
        const button =
          newsletterForm.querySelector<HTMLButtonElement>("button")!;

        if (emailInput.value) {
          // Simular envío
          const originalText = button.innerHTML;
          button.innerHTML = "Suscribiendo...";
          button.disabled = true;

          setTimeout(() => {
            button.innerHTML = "¡Suscrito!";
            button.style.background =
              "linear-gradient(to right, #10b981, #059669)";
            emailInput.value = "";

            setTimeout(() => {
              button.innerHTML = originalText;
              button.disabled = false;
              button.style.background = "";
            }, 2000);
          }, 1000);
        }
      });
    }
  });
</script>
